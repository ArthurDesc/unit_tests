{
    "name": "unit-tests/calculator",
    "description": "Calculator unit testing project",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/php/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:watch": "phpunit --watch"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 